<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/sharing_page_layout"
    tools:context="com.example.selfiemobile.selfie.SharingPage"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanks. Want to tell anyone?"
        android:id="@+id/thank_message"
        android:textSize="24dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/dummy2"
        android:layout_alignEnd="@+id/dummy2"
        android:layout_alignLeft="@+id/dummy2"
        android:layout_alignStart="@+id/dummy2" />
    <Space
        android:layout_width="40dp"
        android:layout_height="150dp"
        android:id="@+id/dummy"
        android:layout_above="@+id/last_screen_selfie_name"
        android:layout_centerHorizontal="true" />
    <Space
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:id="@+id/dummy2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="4dp"
        android:id="@+id/facebook_image"
        android:src = "@drawable/facebookwhite"
        android:onClick="facebook"
        android:layout_below="@+id/thank_message"
        android:layout_toLeftOf="@+id/dummy"
        android:layout_toStartOf="@+id/dummy" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:id="@+id/twitter_image"
        android:src = "@drawable/twitter_logo"
        android:onClick="twitter"
        android:layout_below="@+id/thank_message"
        android:layout_toRightOf="@+id/dummy"
        android:layout_toEndOf="@+id/dummy" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/last_screen_selfie_logo"
        android:src="@drawable/selfie_icon_white"
        android:layout_above="@+id/last_screen_selfie_name"
        android:layout_alignTop="@+id/dummy"
        android:layout_alignRight="@+id/twitter_image"
        android:layout_alignEnd="@+id/twitter_image"
        android:layout_alignLeft="@+id/facebook_image"
        android:layout_alignStart="@+id/facebook_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Selfie"
        android:layout_marginTop="-24dp"
        android:layout_marginBottom="12dp"
        android:textSize="48dp"
        android:id="@+id/last_screen_selfie_name"
        android:textColor="#ffffff"
        android:layout_above="@+id/thank_message"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

